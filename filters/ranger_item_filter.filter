#Shows the quest items and jewels, if you don't know where they are.
Show
    Class Quest Jewel Divination Card "Map" "Labyrinth" Leaguestones


#Shows all bows under level 35. Hides them when over level 35. Perfect for beginners :3
Show
    Class Bow Quivers
    ItemLevel <= 35
    SetBorderColor 196 60 192
    PlayAlertSound 2 150


Show
    Class Bow Quivers
    Rarity > Normal
    ItemLevel > 30
    SetBorderColor 255 0 0
    PlayAlertSound 5 50


#Portal Scrolls not allowed
Hide
    BaseType "Portal Scroll"

#RNGESUS PLZ
Show
    BaseType "Mirror of Kalandra"
    SetBackgroundColor 200 0 0
    SetTextColor 0 0 0
    SetBorderColor 0 0 0
    PlayAlertSound 1
    PlayAlertSound 2
    PlayAlertSound 3

Show
    BaseType "Fishing Rod"
    SetBackgroundColor 200 0 0
